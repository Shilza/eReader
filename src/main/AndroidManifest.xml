<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raw.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/e"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.PropertiesActivity" />
        <activity android:name=".Viewers.PDFViewer" />
        <activity android:name=".Viewers.SimpleTextViewer" />
        <activity android:name=".Main.Statistics" />
        <activity android:name=".Main.BookmarksActivity" />
        <activity android:name=".Viewers.Activities.BookmarksOfParticularBookActivity" />
        <activity android:name=".Main.Settings"></activity>
    </application>

</manifest>