<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raw.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/log"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.MainActivity" />
        <activity android:name=".Main.PropertiesActivity" />
        <activity android:name=".Viewers.PDFViewer" />
        <activity android:name=".Viewers.SimpleTextViewer" />
        <activity android:name=".Main.Navigation.StatisticsActivity" />
        <activity android:name=".Main.Navigation.BookmarksActivity" />
        <activity android:name=".Viewers.Activities.BookmarksOfParticularBookActivity" />
        <activity android:name=".Main.Navigation.SettingsActivity" />
        <activity android:name=".Curl.CurlActivity" />
        <activity android:name=".Viewers.EPUBViewer"></activity>
    </application>

</manifest>