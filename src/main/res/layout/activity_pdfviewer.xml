<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/pdf_viewer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/pdf_viewer_tv_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/action_pdf_viewer_bookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:onClick="pdfViewerOnClick"
                    android:src="@drawable/ic_bookmark_border_white_30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pdf_view_footer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/colorStandardBackground">

                <ImageButton
                    android:onClick="pdfViewerOnClick"
                    android:id="@+id/action_pdf_viewer_share"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share_black_24dp"
                    android:background="?selectableItemBackground"
                     />

                <ImageButton
                    android:onClick="pdfViewerOnClick"
                    android:id="@+id/action_pdf_viewer_orientation"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_page"
                    android:background="?selectableItemBackground"
                    />
                <ImageButton
                    android:onClick="pdfViewerOnClick"
                    android:id="@+id/action_pdf_viewer_goto"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:background="?selectableItemBackground"
                    />
                <ImageButton
                    android:onClick="pdfViewerOnClick"
                    android:id="@+id/action_pdf_viewer_screen_size"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_fullscreen_black_24dp"
                    android:background="?selectableItemBackground"
                    />

                <ImageButton
                    android:onClick="pdfViewerOnClick"
                    android:id="@+id/action_pdf_viewer_add_bookmarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add_bookmarks"
                    android:background="?selectableItemBackground"
                    />

        </LinearLayout>

</RelativeLayout>