<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".GUI.Viewers.PDFViewer">

    <EditText
        android:id="@+id/acPDFViewerDialogGotoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:hint="@string/dialog_pdf_viewer_goto_input_placeholder"
        android:inputType="number"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/acPDFViewerDialogGotoSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acPDFViewerDialogGotoEditText" />

    <Button
        android:id="@+id/acPDFViewerDialogGotoActionGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acPDFViewerDialogGotoSeekBar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/dialog_pdf_viewer_goto_OK"
        android:textColor="#33bbff"
        android:textSize="18sp" />

</RelativeLayout>